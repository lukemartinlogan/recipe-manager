# Example environment file for Docker Compose
# Copy this to .env and customize for your setup

# Path to your recipe-manager repository on the host
APP_SOURCE=../

# Port to expose the application on (host:container)
HOST_PORT=3050

# Container port (internal)
CONTAINER_PORT=3001

# Node environment (development, production, test)
NODE_ENV=development

# Container restart policy (no, always, on-failure, unless-stopped)
RESTART_POLICY=unless-stopped

# CPU and memory limits (optional, remove for no limits)
CPU_LIMIT=1.0
MEMORY_LIMIT=512M
CPU_RESERVATION=0.5
MEMORY_RESERVATION=256M

# Enable nginx reverse proxy (set to true to enable SSL/nginx)
ENABLE_NGINX=false